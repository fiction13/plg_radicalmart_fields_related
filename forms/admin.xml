<form>
    <fieldset name="content">
        <fields name="params" addfieldprefix="Joomla\Plugin\RadicalMartFields\Related\Field">
            <field name="required" type="radio"
                   label="PLG_RADICALMART_FIELDS_RELATED_REQUIRED"
                   class="btn-group btn-group-yesno"
                   default="0">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>

            <field name="show_group_title"
                   type="radio"
                   label="PLG_RADICALMART_FIELDS_RELATED_SHOW_GROUP_TITLE"
                   class="btn-group btn-group-yesno"
                   default="1"
                   filter="integer"
            >
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>

            <field name="show_category"
                   type="radio"
                   label="PLG_RADICALMART_FIELDS_RELATED_SHOW_CATEGORY"
                   class="btn-group btn-group-yesno"
                   default="1"
                   filter="integer"
            >
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>

            <field name="layout" type="layout"
                   label="PLG_RADICALMART_FIELDS_RELATED_LAYOUT"
                   default="default"
                   class="form-select"
                   plugin="related"
                   plugin_type="radicalmart_fields"
            />

            <field name="cols"
                   type="integer"
                   label="PLG_RADICALMART_FIELDS_RELATED_COLS"
                   first="1" last="5" step="1" default="3"
            />
        </fields>
    </fieldset>
</form>